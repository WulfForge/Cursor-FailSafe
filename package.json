{
  "name": "failsafe-cursor",
  "displayName": "FailSafe: AI Development Extension for Cursor",
  "description": "Time-aware, validation-driven AI development assistant for Cursor. By MythologIQ.",
  "version": "1.2.2",
  "publisher": "MythologIQ",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other",
    "Programming Languages",
    "Testing",
    "Debuggers",
    "Formatters",
    "Snippets",
    "Extension Packs"
  ],
  "keywords": [
    "ai",
    "validation",
    "safety",
    "timeout",
    "testing",
    "productivity",
    "code-quality",
    "security",
    "project-management",
    "cursor",
    "development",
    "guardian",
    "failsafe",
    "automation",
    "workflow"
  ],
  "icon": "images/icon.png",
  "galleryBanner": {
    "color": "#1e1e1e",
    "theme": "dark"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/WulfForge/Cursor-FailSafe.git"
  },
  "bugs": {
    "url": "https://github.com/WulfForge/Cursor-FailSafe/issues"
  },
  "homepage": "https://www.MythologIQ.studio",
  "license": "MIT",
  "author": {
    "name": "MythologIQ",
    "url": "https://www.MythologIQ.studio"
  },
  "main": "./out/extension.js",
  "activationEvents": [
    "onStartupFinished"
  ],
  "contributes": {
    "commands": [
      {
        "command": "failsafe.askAI",
        "title": "FailSafe: Ask AI",
        "category": "FailSafe"
      },
      {
        "command": "failsafe.refactor",
        "title": "FailSafe: Refactor Code",
        "category": "FailSafe"
      },
      {
        "command": "failsafe.validate",
        "title": "FailSafe: Validate Code",
        "category": "FailSafe"
      },
      {
        "command": "failsafe.showPlan",
        "title": "FailSafe: Show Project Dashboard",
        "category": "FailSafe"
      },
      {
        "command": "failsafe.retryLastTask",
        "title": "FailSafe: Retry Last Task",
        "category": "FailSafe"
      },
      {
        "command": "failsafe.viewSessionLog",
        "title": "FailSafe: View Session Log",
        "category": "FailSafe"
      },
      {
        "command": "failsafe.markTaskComplete",
        "title": "FailSafe: Mark Task Complete",
        "category": "FailSafe"
      }
    ],
    "configuration": {
      "title": "FailSafe",
      "properties": {
        "failsafe.validationEnabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable AI output validation"
        },
        "failsafe.timeoutEnabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable timeout detection for AI requests"
        },
        "failsafe.testRunner": {
          "type": "string",
          "default": "npm test",
          "description": "Command to run tests"
        },
        "failsafe.validation.strictMode": {
          "type": "boolean",
          "default": false,
          "description": "Enable strict validation mode"
        },
        "failsafe.validation.focusAreas": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": ["security", "performance", "quality", "maintainability"]
          },
          "default": ["security", "performance"],
          "description": "Focus areas for validation"
        },
        "failsafe.timeout.baseTimeout": {
          "type": "number",
          "default": 30000,
          "description": "Base timeout in milliseconds"
        },
        "failsafe.timeout.complexityMultiplier": {
          "type": "number",
          "default": 2.0,
          "description": "Timeout multiplier for complex requests"
        },
        "failsafe.logLevel": {
          "type": "string",
          "enum": ["debug", "info", "warn", "error"],
          "default": "info",
          "description": "Logging level"
        }
      }
    },
    "menus": {
      "commandPalette": [
        {
          "command": "failsafe.askAI",
          "when": "editorTextFocus"
        },
        {
          "command": "failsafe.refactor",
          "when": "editorHasSelection"
        },
        {
          "command": "failsafe.validate",
          "when": "editorTextFocus"
        },
        {
          "command": "failsafe.showPlan"
        },
        {
          "command": "failsafe.retryLastTask"
        },
        {
          "command": "failsafe.viewSessionLog"
        },
        {
          "command": "failsafe.markTaskComplete"
        }
      ]
    },
    "views": {
      "explorer": [
        {
          "id": "failsafeSidebar",
          "name": "FailSafe Activity"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "test:validator": "npx mocha test/validator-emulation.test.js",
    "test:timeout": "npx mocha test/timeoutWatchdog.test.js",
    "test:extensions": "npx mocha test/extension-detection.test.js",
    "test:projectPlan": "npx mocha test/projectPlan.test.js",
    "test:taskEngine": "npx mocha test/taskEngine.test.js",
    "test:ui": "npx mocha test/ui.test.js",
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.42.0",
    "@typescript-eslint/parser": "^5.42.0",
    "eslint": "^8.26.0",
    "typescript": "^4.8.4",
    "mocha": "^10.1.0",
    "proxyquire": "^2.1.3",
    "vsce": "^2.15.0"
  },
  "dependencies": {},
  "extensionDependencies": [],
  "extensionPack": [],
  "preview": false,
  "markdown": "github",
  "qna": "marketplace"
}
